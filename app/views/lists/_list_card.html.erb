<li class="g-col-6 g-col-lg-4 g-col-xl-3">
  <div class="card-category position-relative" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, crop: :fill %>)">
    <%= link_to list_path(list),
        data: { "turbo-method": "delete", "turbo-confirm": "Vraiment ???" },
        class: "btn btn-danger rounded-3 delete-btn" do %>
      <i class="fa-solid fa-trash-can"></i>
    <% end %>
    <%= link_to list_path(list), class: "text-decoration-none" do %>
      <%= list.name %>
    <% end %>
  </div>
</li>
