<a href="#" class="text-decoration-none", data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight">
  <div class="p-3 rounded-4 bg-transparent h-100 d-flex flex-column justify-content-center align-items-center text-secondary border border-secondary"
  style="border-style: dashed!important">
    <div class="fs-2">
      <i class="fa-solid fa-circle-plus"></i>
    </div>
    <div class="text-center">
      Add a new bookmark
    </div>
  </div>
